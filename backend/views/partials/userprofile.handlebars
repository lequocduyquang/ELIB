<div style="margin-bottom: 20px; margin-top:20px">
    <h3>User Profile</h3>
</div>
<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Edit Profile</h4>
        <p class="card-category">Complete your profile</p>
    </div>
    <div class="card-body">
        <form method="POST">

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="email" placeholder="Email or User Name">
            </div>
            <div class="form-group">
                <label>Họ và tên:</label>
                <input type="text" class="form-control" name="password" placeholder="Full name">
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <input type="tel" class="form-control" name="sdt" placeholder="Phone number">
            </div>
            <div class="form-group">
                <label>Ngày sinh:</label>
                <input type="text" class="form-control" name="birthDay" placeholder="Birth Day">
            </div>
            <div class="form-group">
                <div style="text-align: center;">
                    <button class="btn btn-success">Cập nhật</button>
                </div>
            </div>
        </form>
    </div>
</div>