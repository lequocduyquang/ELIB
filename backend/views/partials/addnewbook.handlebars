<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Add new book</h4>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input type="email" class="form-control" id="exampleFormControlInput1">
                <label for="exampleFormControlInput1">Author</label>
                <input type="email" class="form-control" id="exampleFormControlInput1">
                <label for="exampleFormControlInput1">Publisher</label>
                <input type="email" class="form-control" id="exampleFormControlInput1">
                <label for="exampleFormControlInput1">ISBN</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="0-306-40615-2">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Type or Genre</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>Children's</option>
                    <option>Travel</option>
                    <option>Short story</option>
                    <option>Novel</option>
                    <option>Art</option>
                    <option>Action and adventure</option>
                </select>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Choose image</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01"
                        aria-describedby="inputGroupFileAddon01">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</div>