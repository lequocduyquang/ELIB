<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="index.html">Home</a>
        <span class="breadcrumb-item active">Borrow</span>
    </div>
</div>
<section class="static about-sec">

    <div class="mag-login-area py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <div class="login-content bg-white p-30 box-shadow" style="text-align: center;">
                        <!-- Section Title -->
                        <div class="section-heading">
                            <h3>Phiếu mượn sách</h3>
                            <p>Thông tin sách</p>
                            <ul>
                                <li>{{foundBook.title}}</li>
                                <li>{{foundBook.author}}</li>
                            </ul>
                        </div>

                        <h4>Thông tin người dùng</h4>
                        <form action="/guests/login" method="POST">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" class="form-control"
                                    placeholder="Enter Email" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" class="form-control"
                                    placeholder="Enter Password" />
                            </div>
                            <button type="submit" class="btn mag-btn mt-30">Login</button>
                        </form>
                        <p class="lead mt-4">
                            No Account? <a href="/guests/register">Register</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>